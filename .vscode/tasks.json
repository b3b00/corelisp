{
    "version": "2.0.0",
    "command": "dotnet",    
    "args": [],
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/CoreLispTests/CoreLispTests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "unit tests",
            "command": "dotnet",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "${workspaceFolder}/CoreLispTests/CoreLispTests.csproj"
            ],
            "problemMatcher": "$msCompile",                        
        },
        {
            "label": "test with coverage",
            "command": "dotnet",            
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./lcov",
                "/p:exclude=\"[CoreLispTests]*\"",
                "${workspaceFolder}/CoreLispTests/CoreLispTests.csproj"
            ],
            "problemMatcher": "$msCompile",            
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/CoreLispTests/CoreLispTests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/CoreLispTests/CoreLispTests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}